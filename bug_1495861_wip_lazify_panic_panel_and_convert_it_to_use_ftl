           break;
       }
     },
     onViewShowing(aEvent) {
+      let win = aEvent.target.ownerGlobal;
+      let doc = win.document;
+      if (!doc.querySelector("#PanelUI-panic-timeframe")) {
+        win.MozXULElement.insertFTLIfNeeded("browser/panicButton.ftl");
