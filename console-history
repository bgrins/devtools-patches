+
+// Test that console command input is persisted across toolbox loads.
+// See Bug 943306.
+
+"use strict";
+
+const TEST_URI = "data:text/html;charset=utf-8,Web Console test for persisting history - bug 943306";
+
+let test = asyncTest(function* () {
+
+  // First tab: run a bunch of commands and then make sure that you can
+  // navigate through their history.
+  yield loadTab(TEST_URI);
+  let hud = yield openConsole();
+  yield testEmptyInputHistory(hud);
+  yield testPopulatedInputHistory(hud);
+
+  // Second tab: Just make sure that you can navigate through the history
+  // generated by the first tab.
+  yield loadTab(TEST_URI);
+  hud = yield openConsole();
+  yield testPopulatedInputHistory(hud);
+
+  // yield loadTab(TEST_URI);
+  // hud = yield openConsole();
+  // yield testInitialInputHistory(hud);
+
+  // yield loadTab(TEST_URI);
+  // hud = yield openConsole();
+  // yield testInitialInputHistory(hud);
+});
+
+function* testEmptyInputHistory(hud) {
+  let jsterm = hud.jsterm;
+  let {inputNode, INPUT_HISTORY_COUNT} = jsterm;
+
+  for (let i = 0; i < INPUT_HISTORY_COUNT; i++) {
+    // let inputValue = '"item ' + i + '"';
+    let inputValue = i;
+    jsterm.setInputValue(inputValue);
+    jsterm.execute();
+    EventUtils.synthesizeKey("VK_UP", {});
+    is(inputNode.value, inputValue, "Pressing up restores last input");
+  }
+
+  // Make sure the input is actually cleared - `execute` keeps the text in
+  // the field, and clearing it with setInputValue causes the next UP to move
+  // to the input before the last one.
+  EventUtils.synthesizeKey("VK_DOWN", {});
+  is(inputNode.value, "", "The jsterm input is cleared");
+}
+
+function* testPopulatedInputHistory(hud) {
+  // yield promise.defer().promise;
+  let jsterm = hud.jsterm;
+  let {inputNode, INPUT_HISTORY_COUNT} = jsterm;
+  inputNode.focus();
+
+  // Count backwards from original input and make sure that pressing up
+  // restores this.
+  for (let i = INPUT_HISTORY_COUNT - 1; i >= 0; i--) {
+    // let inputValue = '"item ' + i + '"';
+    let inputValue = i;
+    EventUtils.synthesizeKey("VK_UP", {});
+    is(inputNode.value, inputValue, "Pressing up restores last input");
+  }
+}
