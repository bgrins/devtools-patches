+            replaceCSS(window, "resource://devtools/client/themes/" + path);
           }
           return;
         }
 
         replaceCSS(
           window,
           "chrome://devtools/content/" + relativePath.replace(/^client\//, "")
         );
         replaceCSS(window, "resource://devtools/" + relativePath);
