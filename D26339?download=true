+TEST_CREATORS = {"mochitest": MochitestCreator,
+                 "web-platform-tests": WebPlatformTestsCreator,
+                 "xpcshell": XpcshellCreator}
+
+
+def creator_for_suite(suite):
+    base_suite = suite.rsplit("-", 1)[0]
+    return TEST_CREATORS.get(base_suite)
