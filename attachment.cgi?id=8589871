Bug 901250 - Scroll selector into view. r=bgrins


diff --git a/browser/devtools/inspector/inspector-panel.js b/browser/devtools/inspector/inspector-panel.js
index 7d187a7..954e910 100644
--- a/browser/devtools/inspector/inspector-panel.js
+++ b/browser/devtools/inspector/inspector-panel.js
@@ -991,16 +991,30 @@ InspectorPanel.prototype = {
     }
 
     this.selection.nodeFront.getUniqueSelector().then((selector) => {
       clipboardHelper.copyString(selector);
     }).then(null, console.error);
   },
 
   /**
+   * Scroll the unique selector into view.
+   */
+  scrollToUniqueSelector: function InspectorPanel_scrollToUniqueSelector()
+  {
+    if (!this.selection.isNode()) {
+      return;
+    }
+
+    this.selection.nodeFront.getUniqueSelector().then((selector) => {
+      this.browser.contentDocument.querySelector(selector).scrollIntoView();
+    }).then(null, console.error);
+  },
+
+  /**
    * Delete the selected node.
    */
   deleteNode: function IUI_deleteNode() {
     if (!this.selection.isNode() ||
          this.selection.isRoot()) {
       return;
     }
 
