 @CommandProvider
+class AddTest(MachCommandBase):
+    @Command('addtest', category='testing',
+             description='Generate tests based on templates')
+    @CommandArgument('-t', '--type',
+                     choices=['plain', 'chrome', 'browser'],
+                     help='type for the test (currently only mochitests are supported).'
+                          'If you pass a `test` argument this will be determined'
+                          'based on the filename and the folder it is in')
+    @CommandArgument('-d', '--doc',
+                     choices=['html', 'xhtml', 'xul'],
+                     help='Document type for the test (if applicable).'
+                          'If you pass a `test` argument this will be determined'
+                          'based on the filename.')
+    @CommandArgument('test',
+                     nargs='*',
+                     help=('Test to create.'))
+    def addtest(self, type=None, doc=None, test=None):
+        if test and test[0]:
+            test = os.path.abspath(test[0])
+            if os.path.isfile(test):
+                print("Error: can't generate a test that already exists:", test)
+                return 1
+
+            dir = os.path.dirname(test)
+            filename = os.path.basename(test)
+
+            if doc is None:  # Only infer the doc from the filename if it's not passed in
+                doc = os.path.splitext(filename)[1].strip(".")
+
+            if type is None:  # Only infer the type from the filename if it's not passed in
+                if filename.startswith("browser_"):
+                    type = "browser"
+                elif filename.startswith("test_"):
+                    if os.path.isfile(os.path.join(dir, "chrome.ini")):
+                        type = "chrome"
+                    elif os.path.isfile(os.path.join(dir, "mochitest.ini")):
+                        type = "plain"
+        else:
+            test = None
+            if doc is None:  # Provide a default if no test was passed in
+                doc = "html"
+
+        if not type:
+            print("Error: type not specified, and couldn't be detected from the test path.")
+            return 1
+
+        if not doc:
+            print("Error: doc couldn't be detected from the test path.",
+                  "The test should end in (js|html|xhtml|xul)")
+            return 1
+
+        print("Using type ({}) and doc type ({})".format(type, doc))
+
+        content = self.get_template_contents(type, doc)
+
+        if content is None:
+            print("Error: no template file")
+            return 1
+
+        if (test):
+            guessed_ini = "mochitest.ini" if type == "plain" else "{}.ini".format(type)
+            with open(test, "w") as f:
+                f.write(content)
+            print('Please make sure to hg add {} and add it to {}'.format(test, guessed_ini))
+        else:
+            print(content)
+        return 0
+
+    def get_template_contents(self, type, doc):
+        template_file = None
+
+        if type == "browser":
+            template_file = 'browser.template.txt'
+
+        if type == "plain":
+            template_file = 'plain{}.template.txt'.format(doc)
+
+        if type == "chrome":
+            template_file = 'chrome{}.template.txt'.format(doc)
+
+        if template_file is None:
+            return None
+
+        mochitest_templates = os.path.abspath(
+            os.path.join(os.path.dirname(__file__), 'mochitest', 'static')
+        )
+        with open(os.path.join(mochitest_templates, template_file)) as f:
+            content = f.read()
+
+        return content
+
+
