+  <meta charset="utf-8">
+  <title>Test for Bug 835896</title>
+  <script type="application/javascript" src="chrome://mochikit/content/tests/SimpleTest/SimpleTest.js"></script>
+  <link rel="stylesheet" type="text/css" href="chrome://mochikit/content/tests/SimpleTest/test.css">
+  <script type="application/javascript;version=1.8" src="inspector-helpers.js"></script>
+  <script type="application/javascript;version=1.8">
+window.onload = function() {
+  const Cu = Components.utils;
+  Cu.import("resource://gre/modules/devtools/Loader.jsm");
+  const {Promise: promise} =
+    Cu.import("resource://gre/modules/Promise.jsm", {});
+  const {InspectorFront} =
+    devtools.require("devtools/server/actors/inspector");
+  const {WalkerSearch, WalkerIndex} =
+    devtools.require("devtools/server/actors/utils/walker-search");
+  const {console} =
+    Cu.import("resource://gre/modules/devtools/shared/Console.jsm", {});
+
+  SimpleTest.waitForExplicitFinish();
+
+  let walkerFront = null;
+  let walkerActor = null;
+  let client = null;
+  let inspectee = null;
+  let inspector = null;
+
+  addAsyncTest(function* setup() {
+    info ("Setting up inspector and walker actors.");
+
+    let url = document.getElementById("inspectorContent").href;
+    let urlAttached = promise.defer();
+
+    attachURL(url, function(err, client, tab, doc) {
+      inspectee = doc;
+      inspector = InspectorFront(client, tab);
+      urlAttached.resolve();
+    });
+
+    yield urlAttached.promise;
+
+    walkerFront = yield inspector.getWalker();
+    ok(walkerFront, "getWalker() should return an actor.");
+
+    let serverConnection = walkerFront.conn._transport._serverConnection;
+    walkerActor = serverConnection.getActor(walkerFront.actorID);
+    ok(walkerActor,
+      "Got a reference to the walker actor (" + walkerFront.actorID + ")");
+
+    runNextTest();
+  });
+
+  addAsyncTest(function* testIndexExists() {
+    info ("Testing basic index APIs exist.");
+
+    let index = new WalkerIndex(walkerActor);
+    ok(index.data.size > 0, "public index is filled after getting");
+
+    index.clearIndex();
+    ok(!index._data, "private index is empty after clearing");
+    ok(index.data.size > 0, "public index is filled after getting");
+
+    index.destroy();
+    runNextTest();
+  });
+
+  addAsyncTest(function* testSearchExists() {
+    info ("Testing basic search APIs exist.");
+
+    ok(walkerActor.walkerSearch, "walker search is exists on the WalkerActor");
+    ok(walkerActor.walkerSearch.search, "walker search has `search` method");
+    ok(walkerActor.walkerSearch.index, "walker search has `index` property");
+    is(walkerActor.walkerSearch.walker, walkerActor, "referencing the correct WalkerActor");
+
+    let search = new WalkerSearch(walkerActor);
+    ok(search, "a new search instance can be created");
+    ok(search.search, "new search instance has `search` method");
+    ok(search.index, "new search instance has `index` property");
+    isnot(search, walkerActor.walkerSearch, "new search instance differs from the WalkerActor's");
+
+    search.destroy();
+    runNextTest();
+  });
+
+  addAsyncTest(function* testEmptySearch() {
+    info ("Testing search with an empty query.");
+    results = walkerActor.walkerSearch.search("");
+    is(results.length, 0, "No results for an empty search");
+
+    results = walkerActor.walkerSearch.search(null);
+    is(results.length, 0, "No results for an empty search");
+
+    results = walkerActor.walkerSearch.search(undefined);
+    is(results.length, 0, "No results for an empty search");
+
+    results = walkerActor.walkerSearch.search(10);
+    is(results.length, 0, "No results for an empty search");
+
+    let frontResult = yield walkerFront.search("");
+    ok(!frontResult, "Null result on front for empty search");
+
+    runNextTest();
+  });
+
+  addAsyncTest(function* testWalkerFrontDefaults() {
+    info ("Testing search API using WalkerFront.");
+    let expected = [
+      inspectee.querySelectorAll("h2")[0],
+      inspectee.querySelectorAll("h2")[1],
+      inspectee.querySelectorAll("h2")[2],
+    ];
+
+    let results = yield walkerFront.search("h2");
+    isDeeply(results.nodeList, expected, "Search works with no options");
+
+    result = yield walkerFront.search("h2", { });
+    isDeeply(results.nodeList, expected, "Search works with empty options");
+
+    // Clear search data to remove result state on the front
+    yield walkerFront.search("");
+    runNextTest();
+  });
+
+  addAsyncTest(function* testSearchTag() {
+    info ("Testing search for tag with one result.");
+    let expected = [
+      {node: inspectee.body, type: "tag", matched: "body"}
+    ];
+
+    let results = yield walkerFront.search("body");
+    isDeeply(results.nodeList, expected, "Seach works with tag result");
+
+    results = yield walkerFront.search("body");
+    isDeeply(results.nodeList, expected, "Seach works with tag result");
+
+    // Clear search data to remove result state on the front
+    yield walkerFront.search("");
+    runNextTest();
+  });
+
+  addAsyncTest(function* testSearchTags() {
+    info ("Testing search for tag with multiple results.");
+    let expected = [
+      {node: inspectee.querySelectorAll("h2")[0], type: "tag", matched: "h2"},
+      {node: inspectee.querySelectorAll("h2")[1], type: "tag", matched: "h2"},
+      {node: inspectee.querySelectorAll("h2")[2], type: "tag", matched: "h2"},
+    ];
+
+    let results = yield walkerFront.search("h2");
+    isDeeply(results.nodeList, expected, "Seach works with tag results");
+
+    // Clear search data to remove result state on the front
+    yield walkerFront.search("");
+    runNextTest();
+  });
+
+  // XXX: Most of these tests should hit the walkersearch directly since that makes
+  // comparisons easier.  Will need to hit the walkerFront.search() to test search index
+  // and other client-specific functionality.
+
+  addAsyncTest(function* testSearchMixed() {
+    info ("Testing search that has tag and text results.");
+    let expected = [
+      {node: inspectee.querySelectorAll("h1")[0], type: "tag", matched: "h1"},
+      {node: inspectee.querySelectorAll("h1 + p")[1], type: "tag", matched: "h1"},
+      {node: inspectee.querySelectorAll("h1 + p > p")[2], type: "tag", matched: "h1"},
+    ];
+
+    let results = yield walkerFront.search("h1");
+    let h1 = yield walkerFront.querySelector(walkerFront.rootNode, "h1");
+    isDeeply(results, {
+      node: h1,
+      type: "search",
+      resultsIndex: 0,
+      resultsLength: 3
+    });
+debugger;
+    // Clear search data to remove result state on the front
+    yield walkerFront.search("");
+    runNextTest();
+  });
+
+  addAsyncTest(function* testMultipleSearches() {
+    info ("Testing search API using WalkerFront (reverse=false)");
+    let expected = [
+      inspectee.querySelectorAll("h3")[2],
+      inspectee.querySelectorAll("h3")[1],
+      inspectee.querySelectorAll("h3")[0],
+    ];
+
+    let result = yield walkerFront.search("h3");
+    isDeeply(result.nodeList, expected, "Search works with multiple results");
+    is(result.resultsIndex, 0, "Correct index");
+
+    result = yield walkerFront.search("h3");
+    isDeeply(result.nodeList, expected, "Search works with multiple results");
+    is(result.resultsIndex, 1, "Correct index");
+
+    result = yield walkerFront.search("h3");
+    isDeeply(result.nodeList, expected, "Search works with multiple results");
+    is(result.resultsIndex, 2, "Correct index");
+
+    result = yield walkerFront.search("h3");
+    isDeeply(result.nodeList, expected, "Search works with multiple results");
+    is(result.resultsIndex, 0, "Correct index");
+
+    // Clear search data to remove result state on the front
+    yield walkerFront.search("");
+    runNextTest();
+  });
+
+  addAsyncTest(function* testMultipleSearchesReverse() {
+    info ("Testing search API using WalkerFront (reverse=true)");
+    let expected = [
+      inspectee.querySelectorAll("h3")[2],
+      inspectee.querySelectorAll("h3")[1],
+      inspectee.querySelectorAll("h3")[0],
+    ];
+
+    let result = yield walkerFront.search("h3", { reverse: true });
+    isDeeply(result.nodeList, expected, "Search works with reverse=true");
+    is(result.resultsIndex, 2, "Correct index");
+
+    result = yield walkerFront.search("h3", { reverse: true });
+    isDeeply(result.nodeList, expected, "Search works with reverse=true");
+    is(result.resultsIndex, 1, "Correct index");
+
+    result = yield walkerFront.search("h3", { reverse: true });
+    isDeeply(result.nodeList, expected, "Search works with reverse=true");
+    is(result.resultsIndex, 0, "Correct index");
+
+    result = yield walkerFront.search("h3", { reverse: true });
+    isDeeply(result.nodeList, expected, "Search works with reverse=true");
+    is(result.resultsIndex, 2, "Correct index");
+
+    // Clear search data to remove result state on the front
+    yield walkerFront.search("");
+    runNextTest();
+  });
+
+  addAsyncTest(function* testSingleResultMultipleMatches() {
+    info ("Testing multiple matches in a single tag expecting a single result");
+    let expected = [
+      inspectee.getElementById("💩")
+    ];
+
+    let result = yield walkerFront.search("💩");
+    isDeeply(result.nodeList, expected,
+      "Search works with single node / many matches");
+    is(result.resultsIndex, 0, "Correct index");
+
+    result = yield walkerFront.search("💩");
+    isDeeply(result.nodeList, expected,
+      "Search works with single node / many matches");
+    is(result.resultsIndex, 0, "Correct index");
+
+    // Clear search data to remove result state on the front
+    yield walkerFront.search("");
+    runNextTest();
+  });
+
+  runNextTest();
+};
+  </script>
+</head>
+<body>
+<a id="inspectorContent" target="_blank" href="inspector-search-data.html">Test Document</a>
+<p id="display"></p>
+<div id="content" style="display: none">
+
+</div>
+<pre id="test">
+</pre>
+</body>
+</html>
