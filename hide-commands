       Services.prefs.setBoolPref(toolDefinition.visibilityswitch, this.checked);
       if (this.checked) {
         gDevTools.emit("tool-registered", id);
       }
       else {
@@ -119,17 +149,17 @@ OptionsPanel.prototype = {
