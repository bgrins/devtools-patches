+  reloadPrefs: function() {
+    this.editor.resetIndentUnit();
+    this.appended.then(() => {
+      if (this.editor) {
+        this.editor.setOption("autocomplete", prefs.get("devtools.editor.autocomplete"));
+      }
+    });
+  },
