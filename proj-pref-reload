   /**
+   * Reset the state of all Editors based on relevant prefs.
+   */
+  reloadEditorPrefs: function() {
+    for (let [resource, shell] of this.shells.shells.entries()) {
+      shell.editor.reloadPrefs();
+    }
+  },
