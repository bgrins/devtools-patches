 @CommandProvider
 class Test(MachCommandBase):
+    @Command('testgen', category='testing',
+             description='Generate tests based on templates')
+    @CommandArgument('-f', '--flavor',
+                     default=None,
+                     help='Flavor for the test (currently only mochitests are supported).'
+                          '(plain|chrome)')
+    @CommandArgument('-d', '--doc',
+                     default='html',
+                     help='Document type for the test (html|xhtml|xul).')
+    def testgen(self, flavor=False, doc=None):
+        if not flavor:
+            print("You must specify a flavor")
+        mochitest_templates = os.path.abspath(os.path.join(os.path.dirname(__file__), 'mochitest', 'static'))
+        template_file = None
+        if flavor == "plain":
+            if doc == "xul":
+                template_file = os.path.join(mochitest_templates, 'plainxul.template.txt')
+            elif doc == "xhtml":
+                template_file = os.path.join(mochitest_templates, 'plainxhtml.template.txt')
+            else:
+                template_file = os.path.join(mochitest_templates, 'plainhtml.template.txt')
+
+        if flavor == "chrome":
+            if doc == "xul":
+                template_file = os.path.join(mochitest_templates, 'chromexul.template.txt')
+            else:
+                template_file = os.path.join(mochitest_templates, 'chromehtml.template.txt')
+
+        if not template_file:
+            print("Error: no template file")
+            return 1
+
+        with open(template_file) as f:
+            content = f.read()
+
+        print(content)
+
+        return 0
+
     @Command('test', category='testing',
              description='Run tests (detects the kind of test and runs it).',
              parser=get_test_parser)
