       if (smartCase) {
         ignoreCase = (/^[^A-Z]*$/).test(regexPart);
       }
       var regexp = new RegExp(regexPart,
           (ignoreCase || forceIgnoreCase) ? 'i' : undefined);
       return regexp;
     }
